generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String       @id@default(uuid())
  name                    String       
  age                     Int
  email                   String       @unique
  universityName          String
  collegeAddress          String
  role                    Role        @default(player)
  designation             String
  phoneNumber             Int         @unique
}

enum Role {
  collegeReprenstative
  player
}